 
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>List Of Roles</h1>
<a asp-action="New" class="btn btn-primary">New Role</a>
<table class="table table-borderd table-hover mt-2">
    <tr>
        <th>ID</th>
        <th>Name</th>
    </tr>
    @foreach (var item in ViewBag.Roles)
    {
        <tr>
            <td>@item.Id</td>
            <td>@item.Name</td>
        </tr>
    }
</table>